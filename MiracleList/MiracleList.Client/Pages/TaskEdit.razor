<h3>TaskEdit #@this.CurrentTask.TaskID</h3>


<EditForm Model="this.CurrentTask">

	<button @onclick="Save" class="btn btn-success">Save</button>
	<button @onclick="Cancel" class="btn btn-danger">Cancel</button>

	<br />

	<div class="form-group">
		<label>Titel:</label>
		<InputText class="form-control" @bind-Value="this.CurrentTask.Title">

		</InputText>
	</div>

	<div class="form-group">
		<label>Due:</label>
		<InputDate class="form-control" @bind-Value="this.CurrentTask.Due">

		</InputDate>
	</div>

	<div class="form-group">
		<label>Impportance:</label>
		<InputSelect class="form-control" @bind-Value="this.CurrentTask.Importance">
			@foreach (object s in System.Enum.GetValues(typeof(BO.Importance)))
			{
				<option value="@s">@s</option>
			}
		</InputSelect>

	</div>

</EditForm>
